<H1>Welcome to my blog!</h1>

<%= link_to "View All Posts", posts_path, :class => 'sweet-link', :id => 'sweet_link', :"data-anything" => "anything" %>

<% if @recent_posts.any? %>
  <h4>Recent Posts:</h4>
  <ul>
    <% @recent_posts.each do |post| %>
      <li><%= link_to post.title, post_path(post) %></li>
    <% end %>
  </ul>
<% end %>
